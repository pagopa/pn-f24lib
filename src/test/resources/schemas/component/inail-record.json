{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "bankAccount",
    "companyCode",
    "referenceNumber"
  ],
  "type": "object",
  "properties": {
    "locationCode": {
      "pattern": "^[0-9]{5}$",
      "type": "string"
    },
    "companyCode": {
      "pattern": "^[0-9]{8}$",
      "type": "string"
    },
    "bankAccount": {
      "pattern": "^[0-9]{2}$",
      "type": "string"
    },
    "referenceNumber": {
      "pattern": "^[0-9]{6}$",
      "type": "string"
    },
    "reason": {
      "pattern": "^[A-Z0-9]$",
      "type": "string"
    },
    "debitAmount": {
      "pattern": "^(0|[1-9][0-9]{0,14})(\\.\\d{2})$",
      "type": "string"
    },
    "creditAmount": {
      "pattern": "^(0|[1-9][0-9]{0,14})(\\.\\d{2})$",
      "type": "string"
    }
  },
  "description": "INAIL Record object"
}