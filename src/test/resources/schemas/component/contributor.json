{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "taxCode": {
      "pattern": "^([A-Z]{6}[0-9LMNPQRSTUV]{2}[ABCDEHLMPRST]{1}[0-9LMNPQRSTUV]{2}[A-Z]{1}[0-9LMNPQRSTUV]{3}[A-Z]{1})|([0-9]{11})$",
      "type": "string"
    },
    "ifCalendarYear": {
      "type": "boolean"
    },
    "personData": {
      "$ref": "resource:/schemas/component/person-data.json"
    },
    "companyData": {
      "$ref": "resource:/schemas/component/company-data.json"
    },
    "receiverTaxCode": {
      "pattern": "^([A-Z]{6}[0-9LMNPQRSTUV]{2}[ABCDEHLMPRST]{1}[0-9LMNPQRSTUV]{2}[A-Z]{1}[0-9LMNPQRSTUV]{3}[A-Z]{1})|([0-9]{11})$",
      "type": "string"
    },
    "idCode": {
      "pattern": "^[A-Z0-9]{2}$",
      "type": "string"
    },
    "actCode": {
      "pattern": "^\\d{11}$",
      "type": "string"
    },
    "officeCode": {
      "pattern": "^[A-Z0-9]{3}$",
      "type": "string"
    }
  }
}