{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "pattern": "^[A-Z]$",
      "type": ["string", "null"]
    },
    "idElements": {
      "pattern": "^[A-Z0-9]{17}$",
      "type": ["string", "null"]
    },
    "taxTypeCode": {
      "pattern": "^[A-Z0-9]{4}$",
      "type": ["string", "null"]
    },
    "year": {
      "pattern": "^[1-2][0-9]{3}$",
      "type": ["string", "null"]
    },
    "debitAmount": {
      "pattern": "^[0-9]{0,15}$",
      "default": "0",
      "type": ["string", "null"]
    }
  },
  "description": "Treasury Record object"
}