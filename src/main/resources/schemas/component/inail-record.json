{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "officeCode": {
      "pattern": "^[0-9]{5}$",
      "type": ["string", "null"]
    },
    "companyCode": {
      "pattern": "^[0-9]{8}$",
      "type": ["string", "null"]
    },
    "controlCode": {
      "pattern": "^[0-9]{2}$",
      "type": ["string", "null"]
    },
    "referenceNumber": {
      "pattern": "^[0-9]{6}$",
      "type": ["string", "null"]
    },
    "reason": {
      "pattern": "^[A-Z0-9]$",
      "type": ["string", "null"]
    },
    "debitAmount": {
      "pattern": "^[0-9]{0,15}$",
      "default": "0",
      "type": ["string", "null"]
    },
    "creditAmount": {
      "pattern": "^[0-9]{0,15}$",
      "default": "0",
      "type": ["string", "null"]
    }
  },
  "description": "INAIL Record object"
}