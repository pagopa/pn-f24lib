{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": ["object", "null"],
  "required": ["name","surname","birthdate","sex","birthMunicipality","province"],
  "properties": {
    "surname": {
      "pattern": "[A-Z\\s]{1,24}",
      "type": "string"
    },
    "name": {
      "pattern": "^[A-Z\\s]{1,20}$",
      "type": "string"
    },
    "birthdate": {
      "pattern": "^\\d{2}-\\d{2}-\\d{4}$",
      "type": "string"
    },
    "sex": {
      "pattern": "^[FM]$",
      "type": "string"
    },
    "birthMunicipality": {
      "pattern": "^[A-Z\\s]{1,40}$",
      "type": "string"
    },
    "province": {
      "pattern": "^[A-Z]{2}$",
      "type": "string"
    }
  },
  "description": "Personal Data (Dati Anagrafici) object"
}