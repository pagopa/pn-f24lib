{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": [
    "surname",
    "name",
    "dateOfBirth",
    "sex",
    "municipalityOfBirth",
    "province"
  ],
  "properties": {
    "surname": {
      "pattern": "^[A-Z]{1,24}$",
      "type": "string"
    },
    "name": {
      "pattern": "^[A-Z]{1,20}$",
      "type": "string"
    },
    "dateOfBirth": {
      "pattern": "^\\d{2}-\\d{2}-\\d{4}$",
      "type": "string"
    },
    "sex": {
      "pattern": "^[FM]$",
      "type": "string"
    },
    "municipalityOfBirth": {
      "pattern": "^[A-Z]{1,40}$",
      "type": "string"
    },
    "province": {
      "pattern": "^[A-Z]{2}$",
      "type": "string"
    }
  },
  "description": "Personal Data (Dati Anagrafici) object",
  "examples": [
    {
      "surname": "ROSSI",
      "name": "MARIO",
      "dateOfBirth": "2000-11-11",
      "sex": "M",
      "municipalityOfBirth": "MILANO",
      "province": "MI"
    }
  ]
}