{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "contributionReason",
    "officeCode",
    "positionCode"
  ],
  "type": "object",
  "properties": {
    "municipalityCode": {
      "pattern": "^[0-9A-Z]{4}",
      "type": ["string", "null"]
    },
    "officeCode": {
      "pattern": "^[0-9A-Z]{5}$",
      "type": "string"
    },
    "contributionReason": {
      "pattern": "^[0-9A-Z]{3,4}$",
      "type": "string"
    },
    "positionCode": {
      "pattern": "^[0-9]{9}$",
      "type": "string"
    },
    "period": {
      "$ref": "resource:/schemas/component/period.json"
    },
    "debitAmount": {
      "pattern": "^[0-9]{0,15}$",
      "default": "0",
      "type": ["string", "null"]
    },
    "creditAmount": {
      "pattern": "^[0-9]{0,15}$",
      "default": "0",
      "type": ["string", "null"]
    }
  },
  "description": "Social Security Record object"
}