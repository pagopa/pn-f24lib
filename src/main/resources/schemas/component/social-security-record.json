{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "contributionReason",
    "locationCode",
    "positionCode"
  ],
  "type": "object",
  "properties": {
    "institutionCode": {
      "pattern": "^[0-9]{4}$",
      "type": "string"
    },
    "locationCode": {
      "pattern": "^[0-9A-Z]{5}$",
      "type": "string"
    },
    "contributionReason": {
      "pattern": "^[0-9A-Z]{3,4}$",
      "type": "string"
    },
    "positionCode": {
      "pattern": "^[0-9]{9}$",
      "type": "string"
    },
    "period": {
      "$ref": ""
    },
    "debitAmount": {
      "pattern": "^(0|[1-9][0-9]{0,14})(\\.\\d{2})$",
      "type": "string"
    },
    "creditAmount": {
      "pattern": "^(0|[1-9][0-9]{0,14})(\\.\\d{2})$",
      "type": "string"
    }
  },
  "description": "Social Security Record object"
}