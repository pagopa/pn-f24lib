{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "taxCode": {
      "pattern": "^[A-Z]{6}[0-9]{2}[ABCDEHLMPRST]{1}[0-9]{2}[A-Z]{1}[0-9]{3}[A-Z]{1}$",
      "type": ["string", "null"]
    },
    "isNotCalendarYear": {
      "type": ["boolean", "null"]
    },
    "personData": {
      "$ref": "resource:/schemas/component/person-data.json"
    },
    "companyData": {
      "$ref": "resource:/schemas/component/company-data.json"
    },
    "otherTaxCode": {
      "pattern": "^[A-Z]{6}[0-9]{2}[ABCDEHLMPRST]{1}[0-9]{2}[A-Z]{1}[0-9]{3}[A-Z]{1}$",
      "type": ["string", "null"]
    },
    "idCode": {
      "pattern": "^[A-Z0-9]{2}$",
      "type": ["string", "null"]
    },
    "actCode": {
      "pattern": "^\\d{11}$",
      "type": ["string", "null"]
    },
    "officeCode": {
      "pattern": "^[A-Z0-9]{3}$",
      "type": ["string", "null"]
    }
  }
}