{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "required": [
    "contributionReason",
    "locationCode"
  ],
  "type": "object",
  "properties": {
    "locationCode": {
      "pattern": "^[0-9]{3,4}$",
      "type": "string"
    },
    "contributionReason": {
      "pattern": "^[A-Z-]{3,4}$",
      "type": "string"
    },
    "inpsCode": {
      "pattern": "^[A-Za-z0-9\\s]{0,17}$",
      "type": "string"
    },
    "reportingPeriod": {
      "$ref": ""
    },
    "debitAmount": {
      "pattern": "^(0|[1-9][0-9]{0,14})(\\.\\d{2})$",
      "type": "string"
    },
    "creditAmount": {
      "pattern": "^(0|[1-9][0-9]{0,14})(\\.\\d{2})$",
      "type": "string"
    }
  },
  "description": "INPS Record object"
}