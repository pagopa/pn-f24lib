{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "taxTypeCode": {
      "pattern": "^[A-Z0-9]{4}$",
      "type": ["string", "null"]
    },
    "installment": {
      "pattern": "^[A-Z0-9]{0,4}$",
      "type": ["string", "null"]
    },
    "year": {
      "pattern": "^[1-2][0-9]{3}$",
      "type": ["string", "null"]
    },
    "debitAmount": {
      "pattern": "^[0-9]{0,15}$",
      "default": "0",
      "type": ["string", "null"]
    },
    "creditAmount": {
      "pattern": "^[0-9]{0,15}$",
      "default": "0",
      "type": ["string", "null"]
    }
  },
  "description": "Tax object"
}