{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "tributeCode": {
      "pattern": "^[A-Z0-9]{4}$",
      "type": "string"
    },
    "installment": {
      "pattern": "^[A-Z0-9]{0,4}$",
      "type": "string"
    },
    "year": {
      "pattern": "^[1-2][0-9]{3}$",
      "type": "string"
    },
    "debitAmount": {
      "pattern": "^0|[1-9][0-9]{0,14}$",
      "type": "string"
    },
    "creditAmount": {
      "pattern": "^0|[1-9][0-9]{0,14}$",
      "type": "string"
    }
  },
  "description": "Tax object"
}